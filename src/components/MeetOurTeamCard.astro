---
interface Props {
    title?: string
    description?: string
}
const { title = 'Nicolette Ritonni', description = 'Fine ceramics' } =
    Astro.props as Props
---

<div class="w-full">
    <div class="h-auto w-full overflow-hidden bg-gray-300">
        <slot />
    </div>
    <div class="mt-6 space-y-2">
        <p class="text-2xl">{title}</p>
        <p class="text-sm font-extralight uppercase">
            {description}
        </p>
    </div>
</div>
