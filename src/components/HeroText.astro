---
interface Props {
    category: string
    title: string
    description: string
}
const {
    category = 'Furniture',
    title = 'Better Interiors',
    description = 'The perfect place for every contemporary furniture store and manufacturer. This is COMPANY',
} = Astro.props as Props
---

<div
    class={`container mx-auto flex justify-between h-full items-center px-8 sm:px-0`}
>
